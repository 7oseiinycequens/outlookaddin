<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
          xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
          xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
          xsi:type="MailApp">

  <!-- Basic Settings -->
  <Id>50e2e4b5-ff82-47f9-a7f0-f84cc768da3c</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>CEQUENS</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Webhook" />
  <Description DefaultValue="Send emails to webhook"/>

  <IconUrl DefaultValue="https://2160cc8fd8f2.ngrok-free.app/assets/icon-64.png" />
  <HighResolutionIconUrl DefaultValue="https://2160cc8fd8f2.ngrok-free.app/assets/icon-128.png"/>

  <AppDomains>
    <AppDomain>https://2160cc8fd8f2.ngrok-free.app</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://2160cc8fd8f2.ngrok-free.app/web/index.html"/>
        <RequestedHeight>200</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <Permissions>ReadWriteItem</Permissions>
  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  <DisableEntityHighlighting>true</DisableEntityHighlighting>

  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" />
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url" />
          
          <!-- Message Read -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label" />
                  <Supertip>
                    <Title resid="ActionButton.Label" />
                    <Description resid="ActionButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>sendEmailToWebhook</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://2160cc8fd8f2.ngrok-free.app/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://2160cc8fd8f2.ngrok-free.app/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://2160cc8fd8f2.ngrok-free.app/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://2160cc8fd8f2.ngrok-free.app/web/commands.html" />
        <bt:Url id="Taskpane.Url" DefaultValue="https://2160cc8fd8f2.ngrok-free.app/web/index.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Webhook"/>
        <bt:String id="ActionButton.Label" DefaultValue="Send to Webhook"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Sends the email to the webhook server."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
